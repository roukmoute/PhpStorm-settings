<templateSet group="PHP">
  <template name="phpmd.ignore" value="@SuppressWarnings(PHPMD.$END$)" description="PHPMD Suppressing Warnings" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PHP Class Member" value="true" />
      <option name="PHP Comment" value="true" />
    </context>
  </template>
  <template name="bk" value="die(var_dump(__FILE__.':'.__LINE__));" description="Manual Breakpoint" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="OTHER" value="true" />
    </context>
  </template>
</templateSet>